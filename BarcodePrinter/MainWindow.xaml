<!--settings image from https://openclipart.org/detail/234562/settings-button
    popup close image from https://openclipart.org/detail/274081/close-button-->

<Window x:Class="BarcodePrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BarcodePrinter"
        mc:Ignorable="d"
        Title="Barcode Printer" Height="400" Width="800">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="3" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <RadioButton x:Name="rdo610" GroupName="Printers" Content="Mass Print - 610" Grid.Column="0" Grid.Row="0" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rdoPrinter_Checked"/>
            <CheckBox x:Name="ckCut" Content="Enable Cutter" Grid.Column="1"  Grid.Row="0" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Center" />
            <RadioButton x:Name="rdo220" GroupName="Printers" Content="Print N Peel - 220" Grid.Column="0"  Grid.Row="1" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rdoPrinter_Checked"/>
            <CheckBox x:Name="ckPrinterA" Content="Printer A" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" VerticalContentAlignment="Center" Checked="PeelPrinter_Checked" Unchecked="PeelPrinter_Checked" IsThreeState="False" Margin="0,0,0,25"/>
            <CheckBox x:Name="ckPrinterB" Content="Printer B" Grid.Column="1" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" VerticalContentAlignment="Center" Checked="PeelPrinter_Checked" Unchecked="PeelPrinter_Checked" IsThreeState="False"/>

            <TextBlock x:Name="txtStatus" Margin="10" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2" VerticalAlignment="Top"/>

            <!--<TextBlock x:Name="txtUSBStatus" Margin="10" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="2" VerticalAlignment="Stretch"/>-->
            <TextBlock x:Name="txbStatus" Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3"/>
            <TextBlock x:Name="txbQueue"  Margin="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4"/>

            <Button x:Name="btnSettings" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="5" Click="btnSettings_Click" Margin="10">
                <Image Source="/Assets/Options.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Button>
            <Popup x:Name="popSettings" IsOpen="False" Height="300" Width="200" Visibility="Collapsed" Grid.Row="0">
                <Viewbox Stretch="Uniform">
                    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="LightGray" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label x:Name="popLeftLbl" Content="Left Offset:" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <TextBox x:Name="popLeft" Text="Enter Offset..." LostFocus="UxSettings_LostFocus" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" GotFocus="UxSettings_GotFocus"/>
                        <Button x:Name="popClose" HorizontalAlignment="Right" VerticalAlignment="Top" Click="popClose_Click">
                            <Image Source="/Assets/popupClose.png" Height="12"/>
                        </Button>
                        <Label x:Name="popTopLbl" Content="Top Offset:" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <TextBox x:Name="popTop" Text="Enter Offset..." Grid.Row="3" LostFocus="UxSettings_LostFocus" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="UxSettings_GotFocus"/>
                        <Label x:Name="popDarknessLbl" Content="Darkness:" Grid.Row="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        <TextBox x:Name="popDarkness" Text="Enter Darkness..." Grid.Row="5" LostFocus="UxSettings_LostFocus" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="UxSettings_GotFocus"/>
                        <Button x:Name="popBtnTestPrint" Content="Print Test Label" Grid.Row="6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="popBtnTestPrint_Click"/>
                    </Grid>
                </Viewbox>
            </Popup>
        </Grid>

        <TextBlock Text="Customer Number: " HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"/>
        <TextBlock Text="Number of Labels: " HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Margin="10"/>
        <ComboBox x:Name="cbxClients" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" SelectionChanged="cbxClients_SelectionChanged"/>
        <DataGrid x:Name="grdFoundclients" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="10" IsReadOnly="True" SelectedCellsChanged="grdFoundclients_SelectedCellsChanged"/>
        <TextBox x:Name="txtClientSearch" Grid.Row="1" Grid.Column="1" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Text="Customer Search..." TextChanged="cbxSubCustomers_TextChanged" GotFocus="txtClientSearch_GotFocus"/>
        <TextBox x:Name="txtNumLabels" Grid.Row="2" Grid.Column="1" Width="90" VerticalContentAlignment="Center" HorizontalAlignment="Right" VerticalAlignment="Stretch" Margin="10" LostFocus="TextBox_LostFocus"/>

        <Button x:Name="btnPrint" Content="Print" IsEnabled="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Grid.Column="0" Grid.Row="4" Click="btnPrint_Click"/>
        <Button x:Name="btnCancel" Content="Cancel Prints" IsEnabled="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Grid.Column="1" Grid.Row="4" Click="btnCancel_Click"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Grid.Column="2" Grid.Row="4" Click="btnExit_Click" />
    </Grid>
</Window>
